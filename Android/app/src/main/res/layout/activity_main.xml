<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="227dp"
        android:layout_height="67dp"
        android:text="@string/title"
        android:textColor="@color/colorDefaultText"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/btnLightOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnLightTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLightOne" />

    <ImageView
        android:id="@+id/imgLightOne"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnLightOne"
        app:layout_constraintStart_toEndOf="@+id/btnLightOne"
        app:layout_constraintTop_toTopOf="@+id/btnLightOne"
        app:layout_constraintVertical_bias="0.462"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgLightTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnLightTwo"
        app:layout_constraintStart_toEndOf="@+id/btnLightTwo"
        app:layout_constraintTop_toTopOf="@+id/btnLightTwo"
        app:layout_constraintVertical_bias="0.462"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>